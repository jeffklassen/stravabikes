{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../build/server",
    "rootDir": "src",
    "noEmit": false,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "module": "commonjs",
    "target": "ES2020"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}